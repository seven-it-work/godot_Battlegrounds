func _具体战吼方法接口():
	# 战吼：使一个等级4或以下的友方海盗变为金色
	var 友方海盗 = 触发卡.player.获取战场上的牌().filter(func(item): 
		return item is BaseMinion and item != self and Enums.CardRace.海盗 in item.race and item.等级 <= 4 and !item.is_gold
	)
	
	if !友方海盗.is_empty():
		var 倍率 = 触发卡.获取倍率()  # 金色版本使2个海盗变金色
		var list=ArrayUtils.random_select(友方海盗,false,倍率)
		for i in list:
			i.is_gold = true
			print(\"精英导航员：使海盗 \", i.名称, \" 变为金色\")
"

