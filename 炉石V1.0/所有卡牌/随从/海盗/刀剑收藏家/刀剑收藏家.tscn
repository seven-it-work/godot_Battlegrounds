script/source = "extends BaseMinion

func 攻击其他随从(防御者: BaseMinion):
	await super.攻击其他随从(防御者)
	await _攻击相邻随从(防御者)

func _攻击相邻随从(防御者: BaseMinion):
	var 相邻: Array = ArrayUtils.get_neighboring_data(防御者, 防御者.player.获取战场上的牌())
	var 我方攻击力: int = 获取带加成属性().x
	for 邻居 in 相邻:
		await (邻居 as BaseMinion).生命扣除(self, 我方攻击力)
"
