script/source = "extends BaseMinion

func 信号绑定():
	player.随从属性加成信号.connect(_信号.bind())
	pass

func _信号(卡牌:CardEntity,加成数据:AttributeBonus):
	if self.卡片所在位置==Enums.CardPosition.战场:
		if 加成数据.atk_hp.x>0:
			if 卡牌 is BaseMinion:
				if 卡牌.卡片所在位置==Enums.CardPosition.战场:
					if 卡牌.race.has(Enums.CardRace.龙):
						卡牌.属性加成(AttributeBonus.build(
							名称,
							Vector2(0,1*获取倍率()),
							名称,
						), !player.是否在战斗中())
	pass
"

