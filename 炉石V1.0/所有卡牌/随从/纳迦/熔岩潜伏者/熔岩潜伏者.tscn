[sub_resource type="GDScript" id="GDScript_1dx66"]
script/source = "extends BaseMinion

@export var 剩余永久塑造法术次数:int=1


func 信号绑定():
	player.使用卡牌信号.connect(_使用卡牌信号.bind())
	player.开始回合信号.connect(_开始回合信号.bind())
	pass
	
func _开始回合信号():
	剩余永久塑造法术次数=1*获取倍率()
	pass

func _使用卡牌信号(使用的卡牌:CardEntity):
	if 使用的卡牌 is Spellcraft:
		if 剩余永久塑造法术次数>0:
			if 使用的卡牌.选择目标对象 and 使用的卡牌.选择目标对象.目标卡片==self :
				使用的卡牌.是否永久加成=true
				剩余永久塑造法术次数-=1
"

