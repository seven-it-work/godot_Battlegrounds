resource_name = "迟到的旅行者"
script/source = "extends BaseMinion

func 信号绑定():
	player.出售随从信号.connect(_出售信号.bind())
	pass

func _出售信号(出售的卡牌:CardEntity):
	if 出售的卡牌 == self:
		# 获取酒馆法术数量(普通卡1张，金色卡2张)
		var 法术数量 = 获取倍率()
		
		var 酒馆法术列表=player.酒馆.filter(func(item): return item is TavernSpell)
		if 酒馆法术列表.is_empty():
			return
		var 随机法术 = 酒馆法术列表.pick_random()
		for i in 法术数量:
			var 复制法术 = CardUtils.get_card(随机法术.名称, player)
			player.添加卡片(复制法术, Enums.CardPosition.手牌, -1, true)
"

